<div class="page-header">
  <h3>My Debt #<%= @my_debt.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @my_debt.user.present? %>
          <a href="/users/<%= @my_debt.user_id %>">
            <%= @my_debt.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Other</dt>
      <dd>
        <% if @my_debt.other.present? %>
          <a href="/users/<%= @my_debt.other_id %>">
            <%= @my_debt.other.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/my_debts" class="btn btn-primary">
        Back
      </a>
      <a href="/my_debts/<%= @my_debt.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_my_debt/<%= @my_debt.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
